
# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

# Web Files
[*.{html,js,css,sass,scss,svg}]
indent_size = 2

# Markdown Files
[*.md]
trim_trailing_whitespace = false